border-1px($color)
  position relative
  &:after
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    border-top 1px solid $color
    content ''

border-none()
  &:after
    display none

bg-img($url)  //$ 就是变量 图片名字
  //默认大小两倍的屏ratio 移动设备
  background-image url($url + "@2x.png")
  // 选择设备密度比至少3倍就是iphone7p 这样才是高清显示图片
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url + "@3x.png")
